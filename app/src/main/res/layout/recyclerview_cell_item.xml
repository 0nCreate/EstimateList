<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/progressConstraint"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="@dimen/cell_width"
        android:layout_height="@dimen/cell_height"
        android:background="@color/colorCell">

        <TextView
            android:id="@+id/tv_cell_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" />

        <ProgressBar
            android:id="@+id/pb_cell_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:gravity="center" />

        <ImageView
            android:id="@+id/iv_cell_item_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:src="@drawable/ic_report_problem_red_24dp"
            android:tint="#ff0000"
            android:contentDescription="@string/content_descr_estimate_error" />
    </FrameLayout>


</LinearLayout>